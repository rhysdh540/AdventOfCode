#!/bin/sh

# Run the Advent of Code solution for the given day

if [ -z "$1" ]; then
    echo "Usage: aoc <subcommand> [args]"
    exit 1
fi

subcommand=$1
shift

# shellcheck disable=SC2068
case $subcommand in
    run)
        java build-system/src/Run.java $@
        ;;
    init)
        java build-system/src/Init.java $@
        ;;
    *)
        echo "Unknown subcommand: $subcommand"
        exit 1
        ;;
esac